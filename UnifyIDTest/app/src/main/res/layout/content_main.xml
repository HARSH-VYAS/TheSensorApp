<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.example.com.harsh.unifyidtest.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="175sp"
        android:layout_height="200sp"
        android:text="LIGHT"
        android:id="@+id/butLight"
        android:layout_toLeftOf="@+id/butGrav"
        android:layout_toStartOf="@+id/butGrav"
        android:layout_below="@+id/textView" />

    <Button
        android:layout_width="175sp"
        android:layout_height="200sp"
        android:text="GRAVITY"
        android:id="@+id/butGrav"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="170sp"
        android:layout_height="200sp"
        android:text="Accelerometer"
        android:id="@+id/butnAcceler"
        android:layout_below="@+id/butLight"
        android:layout_alignLeft="@+id/butLight"
        android:layout_alignStart="@+id/butLight"
        android:layout_alignRight="@+id/butLight"
        android:layout_alignEnd="@+id/butLight" />

    <Button
        android:layout_width="170sp"
        android:layout_height="200sp"
        android:text="GYROSCOPE"
        android:id="@+id/butGyro"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:layout_alignTop="@+id/butnAcceler"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/butGrav"
        android:layout_alignStart="@+id/butGrav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click On Sensor Button to get Data"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
